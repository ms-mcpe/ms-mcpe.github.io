<body>

    <h1>Generador de Publicaciones Moderno</h1>
    <input type="text" id="titleInput" placeholder="Título del Mod" autocomplete="off">
    <input type="url" id="imageInput" placeholder="URL de la Imagen" autocomplete="off">
    <input type="url" id="downloadInput" placeholder="URL de Descarga" autocomplete="off">
    <button id="generateButton" onclick="generatePost()">Generar Publicación</button>

    <div id="postPreview"></div>
    <pre id="generatedCode"></pre> <button id="copyButton" onclick="copyCode()">Copiar Código</button>

    <script>
        function generatePost() {
            let title = document.getElementById("titleInput").value.trim();
            let imageUrl = document.getElementById("imageInput").value.trim();
            let downloadUrl = document.getElementById("downloadInput").value.trim();
            let date = new Date().toLocaleDateString('es-ES', { day: '2-digit', month: '2-digit', year: 'numeric' }); // Formato DD/MM/YYYY

            if (title && imageUrl && downloadUrl) {
                let postDiv = document.createElement("div");
                postDiv.className = "post-container";
                postDiv.innerHTML = `
                    <h2 class="post-title">${title}</h2>
                    <img src="${imageUrl}" alt="Imagen del mod" class="post-image">
                    <a href="${downloadUrl}" class="download-button" target="_blank" rel="noopener noreferrer">Descargar</a>
                    <p class="post-date">${date}</p>
                `;

                // Generate well-formatted HTML code for the output
                let codeBlock = `
<div class="post-container">
    <h2 class="post-title">${title}</h2>
    <img src="${imageUrl}" alt="Imagen del mod" class="post-image">
    <a href="${downloadUrl}" class="download-button" target="_blank" rel="noopener noreferrer">Descargar</a>
    <p class="post-date">${date}</p>
</div>`;

                document.getElementById("postPreview").innerHTML = "";
                document.getElementById("postPreview").appendChild(postDiv);
                document.getElementById("generatedCode").textContent = codeBlock; // Use textContent for <pre>
            } else {
                alert("Por favor, completa todos los campos.");
            }
        }

        function copyCode() {
            let codeText = document.getElementById("generatedCode").textContent; // Use textContent for <pre>
            navigator.clipboard.writeText(codeText).then(() => {
                alert("Código copiado con éxito!");
            }).catch(err => {
                alert("Error al copiar el código: ", err);
            });
        }
    </script>

</body>
